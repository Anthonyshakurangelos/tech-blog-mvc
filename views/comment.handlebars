 <div class="column is-10 is-offset-1">
{{#each blog.id}}
  <div class="box">
  <div class="media-content">
    <div class="content">
      <p>
        <strong>{{blog_title}}</strong><small>@{{user.username}}</small>
        <br>
        {{desc}}
        <br>
        <small>{{format_date date_created}}</small>
      </p>
    </div>
  </div>
</div>
    {{/each}}
</div>

 <div>
{{#each comments}}
    <div class="column is-10 is-offset-1">
      <div class="box" id="delete-comment">
      <div class="media-content">
        <div class="content">
          <p>
            <strong>{{user.username}}</strong>
            <br>
            {{comment_desc}}
            <br>
            <small>{{format_date date_created}}</small>
            {{!-- {{#if}} --}}

        <button class="button" id="comment-id" type="submit" comment-id="{{comment.id}}">Delete</button>
            </p>
          </div>
         </div>
        </div>
    {{/each}}
    </div>
    {{!-- {{/if}} --}}

     {{#if logged_in}}
  <form id="new-comment-form" data-blog_id={{blog_id}}>
  <div class="column is-10 is-offset-1">
    <div class="box">
  <div class="media-content">
    <div class="field">
      <p class="control">
        <textarea class="textarea" id="comment-desc" name="comment_desc" placeholder="Add a comment..."></textarea>
      </p>
    </div>
    <div class="field">
      <p class="control">
        <button class="button" id="post-comment" type="submit">Post comment</button>
      </p>
      </form>
     </div>
    </div>
   </div>
 <button class="delete-comment-button" id="delete-comment-button" comment-id="{{comment.id}}" >Delete</button>
  </div>
{{/if}}


      
       

<script src="/js/comment.js"></script>
